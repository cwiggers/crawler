<logging>
	<filter enabled="true">
		<tag>file</tag>
		<type>file</type>
		<level>DEBUG</level>
        <property name="filename">/var/log/crawler/crawler.log</property>
		<property name="format">[%D %T] [%L] %M</property>
		<property name="rotate">false</property> 
		<property name="maxsize">100M</property> 
		<property name="maxlines">0K</property> 
		<property name="daily">true</property> 
	</filter>
</logging>

